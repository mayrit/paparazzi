<!DOCTYPE airframe SYSTEM "../../airframe.dtd">

<airframe name="RoBust v3 Morphing Copter">

  <description>
    * Autopilot:   Tawaki
    * Actuators:   4 in 1  
    * Telemetry:   XBee
    * GPS:         datalink
    * RC:          SBUS
  </description>

  <firmware name="rotorcraft">
    <configure name="PERIODIC_FREQUENCY" value="512"/>
    <configure name="AHRS_PROPAGATE_FREQUENCY" value="$(PERIODIC_FREQUENCY)"/>

    <target name="ap" board="tawaki_1.0">
    <module name="radio_control" type="sbus"/>
      <configure name="BARO_PERIODIC_FREQUENCY" value="50"/>
    <define name="RADIO_KILL_SWITCH" value="RADIO_GAIN1"/>
    </target>

    <target name="nps" board="pc">
      <module name="fdm" type="jsbsim"/>
      <module name="radio_control" type="ppm"/>
    </target>


    <module name="telemetry" type="xbee_api"/>
    <module name="tlsf"/>
    <module name="logger" type="sd_chibios"/>

    <module name="fault" />

    <module name="actuators" type="dshot">
      <!--define name="DSHOT_SPEED" value="300"/-->
    </module>

    <module name="actuators"     type="pwm">
      <!-- <define name="TIM1_SERVO_HZ" value="500"/> -->
      <!-- <define name="TIM4_SERVO_HZ" value="2000"/> -->
      <define name="STM32_PWM_USE_TIM5" value="TRUE"/>
      <define name="TIM5_SERVO_HZ" value="300"/>
      <define name="USE_PWM10" value="TRUE"/>
      <!-- <define name="USE_PWM11" value="TRUE"/> -->
    <!-- <define name="INDI_NUM_ACT" value="6"/> -->
	</module>

    <module name="board" type="tawaki">
      <define name="USE_DSHOT_TIM1" value="TRUE"/>
      <define name="IMU_MPU_LOWPASS_FILTER" value="MPU60X0_DLPF_256HZ"/>
      <define name="IMU_MPU_ACCEL_LOWPASS_FILTER" value="MPU60X0_DLPF_ACC_218HZ"/>
      <define name="IMU_MPU_SMPLRT_DIV" value="0"/>
    </module>

    <module name="gps" type="datalink"/>

    <module name="stabilization" type="indi"/>
    <module name="guidance" type="indi">
      <define name="GUIDANCE_INDI_SPECIFIC_FORCE_GAIN" value="-500.0"/>
      <define name="GUIDANCE_INDI_THRUST_DYNAMICS" value="0.03"/>
      <define name="GUIDANCE_INDI_RC_DEBUG" value="FALSE"/>
    </module>
    <module name="fc_rotor"/>

    <module name="ins" type="gps_passthrough"/>
    <module name="ahrs" type="int_cmpl_quat">
      <configure name="USE_MAGNETOMETER" value="FALSE"/>
    </module>

    <module name="air_data"/>
    <module name="logger_tune_indi"/>

    <module name="filter" type="1euro_imu">
      <define name="AHRS_ICQ_IMU_ID" value="IMU_F1E_ID"/>
      <define name="AHRS_ALIGNER_IMU_ID" value="IMU_F1E_ID"/>
    </module>

    <module name="motor_mixing"/>

    <!--module name="tlsf"/>
    <module name="pprzlog"/>
    <module name="logger" type="sd_chibios"/>
    <module name="flight_recorder"/>
    <module name="logger" type="tune_indi"/-->
  </firmware>

  <servos driver="DShot">
    <servo name="UF" no="1" min="0" neutral="100" max="2000"/>
    <servo name="UR" no="2" min="0" neutral="100" max="2000"/>
    <servo name="UL" no="3" min="0" neutral="100" max="2000"/>
    <servo name="BF" no="5" min="0" neutral="100" max="2000"/>
    <servo name="BR" no="6" min="0" neutral="100" max="2000"/>
    <servo name="BL" no="7" min="0" neutral="100" max="2000"/>
  </servos>

  <servos driver="Pwm">
    <servo name="GEAR" no="10" min="950" neutral="1500" max="2050"/>
  </servos>

  <commands>
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="PITCH" failsafe_value="0"/>
    <axis name="YAW" failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="0"/>
    <axis name="GEAR" failsafe_value="0"/>
  </commands>

  <section name="MIXING" prefix="MOTOR_MIXING_">
    <define name="TYPE" value="QUAD_X"/>
    <define name="REVERSE" value="TRUE"/>
  </section>

  <auto_rc_commands>
    <set command="GEAR" value="@GAIN2"/>
  </auto_rc_commands>

  <!--command_laws>
    <call fun="motor_mixing_run(autopilot_get_motors_on(),FALSE,values)"/>
    <set servo="FR" value="motor_mixing.commands[MOTOR_FRONT_RIGHT]"/>
    <set servo="BR" value="motor_mixing.commands[MOTOR_BACK_RIGHT]"/>
    <set servo="BL" value="motor_mixing.commands[MOTOR_BACK_LEFT]"/>
    <set servo="FL" value="motor_mixing.commands[MOTOR_FRONT_LEFT]"/>
  </command_laws-->
  <command_laws>
    <set servo="UF" value="autopilot_get_motors_on() ? actuators_pprz[0]*upper_front_effectiveness : -MAX_PPRZ"/>
    <set servo="UR" value="autopilot_get_motors_on() ? actuators_pprz[1]*upper_right_effectiveness : -MAX_PPRZ"/>
    <set servo="UL" value="autopilot_get_motors_on() ? actuators_pprz[2]*upper_left_effectiveness : -MAX_PPRZ"/>
    <set servo="BF" value="autopilot_get_motors_on() ? actuators_pprz[3]*bottom_front_effectiveness : -MAX_PPRZ"/>
    <set servo="BR" value="autopilot_get_motors_on() ? actuators_pprz[4]*bottom_right_effectiveness : -MAX_PPRZ"/>
    <set servo="BL" value="autopilot_get_motors_on() ? actuators_pprz[5]*bottom_left_effectiveness : -MAX_PPRZ"/>
    <set servo="GEAR" value="@GEAR"/>
  </command_laws>


  <section name="IMU" prefix="IMU_">
    <define name="GYRO_P_SIGN" value="1"/>
    <define name="GYRO_Q_SIGN" value="1"/>
    <define name="GYRO_R_SIGN" value="1"/>


    <define name="ACCEL_X_SIGN" value="1"/>
    <define name="ACCEL_Y_SIGN" value="1"/>
    <define name="ACCEL_Z_SIGN" value="1"/>

    <define name="ACCEL_X_NEUTRAL" value="0.0"/>
    <define name="ACCEL_Y_NEUTRAL" value="0.0"/>
    <define name="ACCEL_Z_NEUTRAL" value="0.0"/>
    <define name="ACCEL_X_SENS" value="2.26755822693" integer="16"/>
    <define name="ACCEL_Y_SENS" value="2.4468957791" integer="16"/>
    <define name="ACCEL_Z_SENS" value="2.45151941617" integer="16"/>


    <define name="MAG_X_SIGN" value="1"/>
    <define name="MAG_Y_SIGN" value="1"/>
    <define name="MAG_Z_SIGN" value="1"/>
    <define name="MAG_X_NEUTRAL" value="-1536"/>
    <define name="MAG_Y_NEUTRAL" value="-6416"/>
    <define name="MAG_Z_NEUTRAL" value="-1155"/>
    <define name="MAG_X_SENS" value="0.681949567277" integer="16"/>
    <define name="MAG_Y_SENS" value="0.671291264901" integer="16"/>
    <define name="MAG_Z_SENS" value="0.671773407886" integer="16"/>

    <define name="BODY_TO_IMU_PHI" value="0." unit="deg"/>
    <define name="BODY_TO_IMU_THETA" value="0." unit="deg"/>
    <define name="BODY_TO_IMU_PSI" value="0." unit="deg"/>
  </section>

